@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var modelc in Model)
        {
            <tr>
                <td>@Html.ActionLink(modelc.Name, "Details", "Movies", new { id = modelc.Id }, null)</td>
                <td>@modelc.Genre</td>
            </tr>
        }
    </tbody>
</table>

