@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New customer</h2>

@using (Html.BeginForm("EditSave", "Customers"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(e => e.Customer.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Birthday)
        @Html.TextBoxFor(m => m.Customer.Birthday,"{0:yyyy-MM-dd}", new { @class = "form-control" })
    </div>
   
    <div class="form-group">
       <label>Membership type</label>
        @Html.DropDownListFor(m => m.Customer.MemberShipType.Id,new SelectList(Model.MemberShipType,"Id","Name"),"Select" ,new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsletter) Suscribeb to newsletter
        </label>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>

}

